<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/css/main.css")" rel="stylesheet" type="text/css" />
    
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
</head>
    <body>
        <form id="frmHeader" action="../Patient/Search" method="GET">
            <table width="100%">
                <tr>
                    <td class="title">@ViewBag.FacilityName</td>
                    <td class="user">@ViewBag.UserName | <a href='/Login/Logout'>Đăng xuất</a></td>
                    <td rowspan="2" class="btnNewPatients button"><a href='/Patient/Search'>BN mới</a></td>
                    <td rowspan="2" class="btnSettings button"><a href='/Settings/Index'>Cấu hình</a></td>
                </tr>
                <tr>
                    <td><input id='search' name="key" type="text" style="width: 100%;height: 19px;"/> </td>
                    <td class="btnSearch"><input name="" type="submit" value="Tìm bệnh nhân"/></td>                  
                </tr>
            </table>
        </form>
        <div class="main">
         @RenderBody()
         </div>
    </body>
</html>
