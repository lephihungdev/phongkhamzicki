@using System.Diagnostics
@model VIT.Pre.HealthCare.Models.DoctorModel
@{
    ViewBag.Title = "Phòng khám online";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset class="patientinfo">
        <legend>Thông tin bác sĩ</legend>
        <table>
            <tr>
                <td class="title">
                    @Html.LabelFor(model => model.Id):
                    @Html.HiddenFor(model => model.Id)
                </td>
                <td class="value">
                    @Html.DisplayFor(model => model.Id)
                </td>
            </tr>
            <tr>
                <td class="title">
                    @Html.LabelFor(model => model.FirstName):
                    @Html.ValidationMessageFor(model => model.FirstName)
                </td>
                <td class="value">@Html.EditorFor(model => model.FirstName)</td>
            </tr>
            <tr>
                 <td class="title">
                    @Html.LabelFor(model => model.LastName):
                    @Html.ValidationMessageFor(model => model.LastName)
                 </td>    
                 <td class="value">@Html.EditorFor(model => model.LastName)</td>
            </tr>
        </table>
        <table>
            <tr>
                <td class="title">
                    @Html.LabelFor(model => model.Sex):
                    @Html.ValidationMessageFor(model => model.Sex)
                </td>
                <td class="value">@Html.EditorFor(model => model.Sex)</td>
            </tr>
            <tr>
                <td class="title">
                    @Html.LabelFor(model => model.Birthday):
                    @Html.ValidationMessageFor(model => model.Birthday)
                </td>
                <td class="value">@Html.EditorFor(model => model.Birthday)</td>
            </tr>
            <tr>
               <td class="title">
                    @Html.LabelFor(model => model.Phone):
                    @Html.ValidationMessageFor(model => model.Phone)
                </td>
                <td class="value">@Html.EditorFor(model => model.Phone)</td>
            </tr>
        </table>
         <table>
            <tr>
                <td class="title">
                    @Html.LabelFor(model => model.Address):
                    @Html.ValidationMessageFor(model => model.Address)
                </td>
                <td class="value">@Html.EditorFor(model => model.Address)</td>
            </tr>
            <tr>
                <td class="title">
                    @Html.LabelFor(model => model.Email):
                    @Html.ValidationMessageFor(model => model.Email)
                </td>
                <td class="value">@Html.EditorFor(model => model.Email)</td>
            </tr>
            <tr>
                <td colspan="2"><input type="submit" value="Lưu" class="btnLogin save" style="float:right"/></td>
            </tr>
        </table>
    </fieldset>
}

<fieldset class="patientlist">
    <legend>Danh sách bác sĩ</legend>
    <form action="/Settings/Doctor" method="GET">
        <table width="100%">
            <tr>
                <td><input id='search' name="key" type="text" style="width: 100%;height: 19px;"/> </td>
                <td style="padding-left:10px" class="btnSearch"><input name="" type="submit" value="Tìm"/></td>                  
            </tr>
        </table>
    </form>
    <table class="table" width="100%" border="0" cellspacing="0" cellpadding="0">
        <thead>
            <tr>
                <td>Mã</td>
                <td>Họ</td>
                <td>Tên</td>
                <td>Ngày sinh</td>
                <td>Giới tính</td>
                <td>Điện Thoại</td>
                <td>Địa chỉ</td>
                <td style="width: 25px">Xóa</td>
            </tr>
        </thead>
        
        @foreach (var o in Model.Doctors)
        {
            <tr>
                <td>@o.Id</td>
                <td>@o.FirstName</td>
                <td>@o.LastName</td>
                <td>@o.Birthday</td>
                <td>@o.Sex</td>
                <td>@o.Phone</td>
                <td>
                    <span>@o.Address</span>
                    <span style="display: none">@o.Email</span>
                </td>
                <td style="text-align: center"><a href="/Settings/DoctorDelete?id=@o.Id"><img src="../../Content/images/DeleteRed.png"/></a></td>
            </tr>
        }
    </table>
 </fieldset>
