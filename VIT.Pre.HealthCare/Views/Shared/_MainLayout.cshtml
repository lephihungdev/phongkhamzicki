<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <link href="../../Content/images/logo2.ico" rel="shortcut icon" type="image/x-icon">
    <link href="../../Content/images/logo2.ico" rel="icon" type="image/ico">
    <link href="@Url.Content("~/Content/css/main.css")" rel="stylesheet" type="text/css" />
    
    <link href="@Url.Content("~/Content/css/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui.js")" type="text/javascript"></script>
</head>
    <body>
        <form id="frmHeader" action="../Patient/Search" method="GET">
            <table width="100%">
                <tr>
                    <td class="title">@ViewBag.FacilityName</td>
                    <td class="user">@ViewBag.UserName | <a href='/Login/Logout'>Đăng xuất</a></td>
                    <td rowspan="2" class="btnNewPatients button" onclick="window.location.href = '/Patient/Search';"><a href='#'>BN mới</a></td>
                    <td rowspan="2" class="btnReports button" onclick="window.location.href = '/Report/Index';"><a href='#'>Thống kê</a></td>
                    <td rowspan="2" class="btnSettings button" onclick="window.location.href = '/Settings/Index';"><a href='#'>Cấu hình</a></td>
                </tr>
                <tr>
                    <td><input id='search' name="key" type="text" style="width: 100%;height: 19px;"/> </td>
                    <td class="btnSearch"><input name="" type="submit" value="Tìm bệnh nhân"/></td>                  
                </tr>
            </table>
        </form>
        <div class="main">
            @{ var display = string.IsNullOrEmpty(@ViewBag.ErrorLabel) ? "none" : "";}
            <p id="ErrorLabel" style="padding: 5px; color: Red; font-weight: bold; font-size: 12px;display:@display">@ViewBag.ErrorLabel</p>
            @RenderBody()
        </div>
    </body>
</html>
